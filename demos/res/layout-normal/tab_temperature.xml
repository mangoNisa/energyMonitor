<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="15dp"
    android:background="#f2f2f2"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_corner" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical" >

                    

                    <LinearLayout
                        android:id="@+id/top_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/bedroom"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Bedroom"
                            android:textSize="25dp" />
                        
                         <Button
                            android:id="@+id/bedroombutton"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Adjust" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <com.actionbarsherlock.sample.demos.SemiCircleProgressBarView
                            android:id="@+id/bedroomtempprogress"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/center_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/bedroomval"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BR"
                                android:textSize="30dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/top_container2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/livingarea"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Living Area"
                            android:textSize="25dp" />

                        <Button
                            android:id="@+id/livingareabutton" 
                            style="?android:attr/buttonStyleSmall"
                            
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                           
                            android:text="Adjust" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <com.actionbarsherlock.sample.demos.SemiCircleProgressBarView
                            android:id="@+id/livingtempprogress"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/left_container2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/center_container2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/livingroomval"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BR"
                                android:textSize="30dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/top_container3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/utility"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Utility Room"
                            android:textSize="25dp" />
                        
                         <Button
                            android:id="@+id/utilitybutton"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:text="Adjust" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <com.actionbarsherlock.sample.demos.SemiCircleProgressBarView
                            android:id="@+id/utiltempprogress"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/left_container3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/center_container3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/utilroomval"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BR"
                                android:textSize="30dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>